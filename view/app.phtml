<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <script type="text/javascript" src="/zf-api-first/js/jquery.min.js"></script>
    <script type="text/javascript" src="/zf-api-first/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/lodash.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/q.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/URI.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/URITemplate.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/hyperagent.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/angular.js"></script>
<!--    <script type="text/javascript" src="/zf-api-first-admin/js/angular.halparser.js"></script>-->
<!--    <script type="text/javascript" src="/zf-api-first-admin/js/angular.hal.js"></script>-->
    <link rel="stylesheet" type="text/css" href="/zf-api-first/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/zf-api-first/css/main.css" />
</head>
<body id="ng-app" ng-app="ag-admin">
    <a class="sr-only" href="#content"> â€¦ </a>
    <header class="navbar navbar-inverse navbar-fixed-top zfa1-nav" role="banner">
        <div class="container">
            <div class="navbar-header">
                <a href="/admin" class="navbar-brand">
                    <img src="/zf-api-first/img/zfa1-logo.png">
                </a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".zfa1-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <nav class="collapse navbar-collapse zfa1-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li class="zfa1-nav-dashboard active">
                        <a href="#">Dashboard</a>
                    </li>
                    <li>
                        <a href="/apidoc">API Doc</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="ag-module-navigation" ng-controller="APIListController">
        <div class="container">
            <span class="pull-left">Modules: </span>
            <button ng-hide="addAPI" ng-click="addAPI = true" id="create-module-button" class="btn btn-sm btn-primary pull-right" title="Create New API" position="bottom" content="#create-api-form">
                Create New API
            </button>
            <ul class="nav nav-pills ag-nav-pills">
                <li ng-repeat="api in apis">
                    <a href="#/api/{{ api.props.name }}/info">{{ api.props.namespace }}</a>
                </li>
            </ul>
        </div>
        <div ng-show="addAPI" id="create-api-form" class="panel panel-default pull-right">
            <div class="panel-heading">Create New API</div>
            <div class="panel-body">
                <form ng-submit="createNewAPI()">
                    <input type="text" ng-model="apiName" placeholder="API Name ...">
                    <button type="submit" class="btn btn-sm btn-success">Create API</button>
                    <button ng-click="resetForm()" type="button" class="btn btn-sm btn-default">Cancel</button>
                </form>
            </div>
        </div>
    </div>

    <div class="ag-header" id="content">
        <div class="container">
            <h1>{{ pageTitle }}</h1>
            <p>{{ pageDescription }}</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <aside class="ag-sidebar" role="complementary">
                    <ul class="nav ag-sidenav" ng-controller="ViewNavigationController">
                        <li ng-repeat="item in items" ng-class="{active: section == item.id}">
                            <a ng-href="#{{ item.link }}">{{ item.name }}</a>
                        </li>
                    </ul>
                </aside>
            </div>
            <main class="col-md-9" role="main">
                <h1>{{ view.title }}</h1>
                <div id="content" ng-view></div>
            </main>
        </div>
    </div>

    <script type="text/javascript" src="/zf-api-first-admin/js/app.js"></script>
    </body>
</html>
