<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <script type="text/javascript" src="/zf-api-first/js/jquery.min.js"></script>
    <script type="text/javascript" src="/zf-api-first/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/vendor/lodash.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/vendor/q.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/vendor/URI.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/vendor/URITemplate.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/vendor/hyperagent.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/vendor/angular.js"></script>
    <script type="text/javascript" src="/zf-api-first-admin/js/vendor/ng-tags-input.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/zf-api-first/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/zf-api-first-admin/css/ng-tags-input.min.css" />
    <link rel="stylesheet" type="text/css" href="/zf-api-first/css/main.css" />
    <link rel="stylesheet" type="text/css" href="/zf-api-first-admin/css/bootstrap-glyphicons.css" />
</head>
<body id="ng-app" ng-app="ag-admin">
    <a class="sr-only" href="#content"> â€¦ </a>
    <header class="navbar navbar-inverse navbar-fixed-top ag-nav" role="banner">
        <div class="container">
            <div class="navbar-header">
                <a href="/admin" class="navbar-brand">
                    <img src="/zf-api-first/img/ag-logo.png">
                </a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".ag-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <nav class="collapse navbar-collapse ag-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li class="ag-nav-dashboard active">
                        <a href="#">Dashboard</a>
                    </li>
                    <li>
                        <a href="/apidoc">API Doc</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="ag-module-navigation" ng-controller="ApiListController">
        <div class="container">
            <span class="pull-left">APIs: </span>
            <button ng-hide="showNewApiForm" ng-click="showNewApiForm = true" id="create-module-button" class="btn btn-sm btn-primary pull-right" title="Create New API" position="bottom" content="#create-api-form">
                Create New API
            </button>
            <ul class="nav nav-pills ag-nav-pills">
                <li ng-repeat="api in apis" ng-class="{active: ($root.routeParams.apiName == api.name)}">
                    <a href="#/api/{{ api.name }}/info">{{ api.namespace }}</a>
                </li>
            </ul>
        </div>
        <div ng-show="showNewApiForm" id="create-api-form" class="panel panel-default pull-right">
            <div class="panel-heading">Create New API</div>
            <div class="panel-body">
                <form ng-submit="createNewApi()">
                    <input type="text" ng-model="apiName" placeholder="API Name ...">
                    <button type="submit" class="btn btn-sm btn-success">Create API</button>
                    <button ng-click="resetForm()" type="button" class="btn btn-sm btn-warning">Cancel</button>
                </form>
            </div>
        </div>
    </div>

    <div class="ag-header" id="content">
        <div class="container">
            <h1>{{ pageTitle }}</h1>
            <p>{{ pageDescription }}</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <view-navigation></view-navigation>
            </div>
            <main class="col-md-9" role="main">
                <h1>{{ view.title }}</h1>
                <div id="content" ng-view></div>
            </main>
        </div>
    </div>

    <script type="text/javascript" src="/zf-api-first-admin/js/app.js"></script>
    </body>
</html>
